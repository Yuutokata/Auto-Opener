<configuration>
    <!-- Async JSON Console Appender with improved performance -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                    <prettyPrint>false</prettyPrint>
                </jsonFormatter>
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSX</timestampFormat>
                <appendLineSeparator>true</appendLineSeparator>
                <includeMDC>true</includeMDC>
            </layout>
        </encoder>
    </appender>

    <!-- Async wrapper for Console appender -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- Rolling File Appender with size and time based rotation -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/auto-opener.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/auto-opener-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                    <prettyPrint>false</prettyPrint>
                </jsonFormatter>
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSX</timestampFormat>
                <appendLineSeparator>true</appendLineSeparator>
                <includeMDC>true</includeMDC>
            </layout>
        </encoder>
    </appender>

    <!-- Async wrapper for File appender -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <!-- Optimized Loki appender with batching -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>${LOKI_URL:-http://b856d7c7-976f-40b5-bcf7-a25f6a2daeea:5001/loki/api/v1/push}</url>
            <connectionTimeoutMs>10000</connectionTimeoutMs>
            <requestTimeoutMs>15000</requestTimeoutMs>
        </http>
        <format>
            <label>
                <pattern>
                    app=${APP_NAME:-auto-opener},environment=${ENVIRONMENT:-development},host=${HOSTNAME:-localhost},level=%level
                </pattern>
            </label>
            <message>
                <pattern>{"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}", "level":"%level", "thread":"%thread",
                    "logger":"%logger{20}", "message":"%msg", "exception":"%ex", "mdc":%mdc}
                </pattern>
            </message>
            <sortByTime>true</sortByTime>
        </format>
        <batchSize>5000</batchSize>
        <batchTimeoutMs>1000</batchTimeoutMs>
        <sendQueueSize>1000</sendQueueSize>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.JaninoEventEvaluator">
                <expression>property("ENVIRONMENT").equalsIgnoreCase("production")</expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>NEUTRAL</OnMatch>
        </filter>
    </appender>

    <!-- Root logger configuration -->
    <root level="${LOG_LEVEL:-INFO}">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <appender-ref ref="LOKI"/>
    </root>

    <!-- Third-party library logging levels -->
    <logger name="org.mongodb.driver" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="io.ktor.auth" level="INFO"/>
    <logger name="com.github.loki4j" level="WARN"/>
    <logger name="io.ktor.routing" level="WARN"/>
    <logger name="io.ktor.server" level="WARN"/>
    <logger name="org.litote.kmongo" level="WARN"/>
    <logger name="kotlinx.coroutines" level="WARN"/>
</configuration>
